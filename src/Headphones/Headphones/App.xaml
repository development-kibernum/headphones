<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="Headphones.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="LeagueGothicRegular" />
        </Style>
        <Style TargetType="Entry">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="LeagueGothicRegular" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="LeagueGothicRegular" />
        </Style>
        <Color x:Key="colorBlackBackground">#1D1E21</Color>
        <Color x:Key="colorBlack">#000000</Color>
        <Color x:Key="colorRed">#F43440</Color>
        <Color x:Key="colorWhite">#FFFFFF</Color>
    </Application.Resources>
</Application>